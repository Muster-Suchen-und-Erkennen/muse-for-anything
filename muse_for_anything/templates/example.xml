<?xml version="1.0"?>
<!DOCTYPE rdf:RDF [
    <!ENTITY owl "http://www.w3.org/2002/07/owl#" >
    <!ENTITY xsd "http://www.w3.org/2001/XMLSchema#" >
    <!ENTITY rdfs "http://www.w3.org/2000/01/rdf-schema#" >
    <!ENTITY rdf "http://www.w3.org/1999/02/22-rdf-syntax-ns#" >
]>

<rdf:RDF
    xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
    xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
    xmlns:owl="http://www.w3.org/2002/07/owl#"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema#">

    <owl:Ontology rdf:about="{{ name }}">
        <rdfs:comment>{{ description_of_the_namespace }}</rdfs:comment>
    </owl:Ontology>

    {% for taxonomie in taxonomy_list %}
    <owl:Class rdf:about="{{ taxonomie.name }}">
        <rdfs:comment>{{ taxonomie.description }}</rdfs:comment>
        <rdfs:label>taxonomie</rdfs:label> 
    </owl:Class>      
    {% endfor %}

    <owl:ObjectProperty rdf:about="#hasChild">
        <rdfs:label>hasChild</rdfs:label>
        <rdfs:comment>Denotes a source-target relationship between taxonomy items</rdfs:comment>
    </owl:ObjectProperty>

    {% for taxonomie in taxonomy_list %}
    {% for item in taxonomie.items %}
    <owl:NamedIndividual rdf:about="{{ item.current_version.name }}">
        <rdf:type rdf:resource="&owl;class"/>
        <rdfs:comment>{{ item.current_version.description }}</rdfs:comment>
        <rdfs:label>taxonomy_item</rdfs:label>
        {% for relation in item.current_related %}
        <hasChild rdf:resource="{{ relation.taxonomy_item_target.name }}"/>
        {% endfor %}
    </owl:NamedIndividual>
    {% endfor %}
    {% endfor %}

    {% for type in type_list %}
    <owl:Class rdf:about="{{ type.name }}">
        <rdfs:comment>{{ type.description }}</rdfs:comment>
        <rdfs:label>type</rdfs:label>
    </owl:Class>
    {% endfor %}

</rdf:RDF>